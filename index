    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Lógica de navegação por abas
        const tabButtons = document.querySelectorAll('.tab-button');
        const tabContents = document.querySelectorAll('.tab-content');

        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Remove a classe 'active' de todos
                tabButtons.forEach(btn => btn.classList.remove('active'));
                tabContents.forEach(content => content.classList.remove('active'));

                // Adiciona 'active' ao botão clicado e ao conteúdo correspondente
                button.classList.add('active');
                document.getElementById(button.dataset.tab).classList.add('active');
                
                // Dispara a animação das barras de progresso na aba ativa
                if (button.dataset.tab === 'tab-ads' || button.dataset.tab === 'tab-reclamacoes') {
                    animateProgressBars();
                }
            });
        });

        // Lógica para animar as barras de progresso quando ficam visíveis
        const animateProgressBars = () => {
            const progressBars = document.querySelectorAll('.progress-bar-fill');
            progressBars.forEach(bar => {
                const width = bar.getAttribute('data-width');
                // Adiciona um pequeno delay para a transição ser mais visível
                setTimeout(() => {
                    bar.style.width = width + '%';
                }, 200);
            });
        };

        // Animação de elementos ao rolar (efeito "fade in")
        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                    if (entry.target.querySelector('.progress-bar-fill')) {
                       animateProgressBars();
                    }
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });

        const elementsToAnimate = document.querySelectorAll('.card, .insight-box');
        elementsToAnimate.forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(el);
        });

        // Ativa a animação da primeira aba por padrão
        animateProgressBars();
    });
    </script>

</body>
